{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "extends": [
        "config:base"
    ],
    "maven": {
        "repositories": [
            "https://dl.google.com/dl/android/maven2/",
            "https://plugins.gradle.org/m2/",
            "https://repo1.maven.org/maven2/"
        ]
    },
    "packageRules": [
        {
            "matchDatasources": ["maven"],
            "registryUrls": [
                "https://dl.google.com/dl/android/maven2/",
                "https://plugins.gradle.org/m2/",
                "https://repo1.maven.org/maven2/"
            ]
        }
    ],
    "regexManagers": [
        {
            "fileMatch": [
                "^.*Versions\\.kt$"
            ],
            "matchStrings": [
                "val agp: String = \"(?<currentValue>\\d+\\.\\d+\\.\\d+)\""
            ],
            "depNameTemplate": "com.android.tools.build:gradle"
        },
        {
            "fileMatch": [
                "^.*Versions\\.kt$"
            ],
            "matchStrings": [
                "val androidxCore: String = \"(?<currentValue>\\d+\\.\\d+\\.\\d+)\""
            ],
            "depNameTemplate": "androidx.core:core"
        },
        {
            "fileMatch": [
                "^.*Versions\\.kt$"
            ],
            "matchStrings": [
                "val appcompat: String = \"(?<currentValue>\\d+\\.\\d+\\.\\d+)\""
            ],
            "depNameTemplate": "androidx.appcompat:appcompat"
        },
        {
            "fileMatch": [
                "^.*Versions\\.kt$"
            ],
            "matchStrings": [
                "val material: String = \"(?<currentValue>\\d+\\.\\d+\\.\\d+)\""
            ],
            "depNameTemplate": "com.google.android.material:material"
        },
        {
            "fileMatch": [
                "^.*Versions\\.kt$"
            ],
            "matchStrings": [
                "val lifecycle: String = \"(?<currentValue>\\d+\\.\\d+\\.\\d+)\""
            ],
            "depNameTemplate": "androidx.lifecycle:lifecycle-runtime-ktx"
        },
        {
            "fileMatch": [
                "^.*Versions\\.kt$"
            ],
            "matchStrings": [
                "val fragment: String = \"(?<currentValue>\\d+\\.\\d+\\.\\d+)\""
            ],
            "depNameTemplate": "androidx.fragment:fragment-ktx"
        },
        {
            "fileMatch": [
                "^.*Versions\\.kt$"
            ],
            "matchStrings": [
                "val activity: String = \"(?<currentValue>\\d+\\.\\d+\\.\\d+)\""
            ],
            "depNameTemplate": "androidx.activity:activity-ktx"
        },
        {
            "fileMatch": [
                "^.*Versions\\.kt$"
            ],
            "matchStrings": [
                "val constraintlayout: String = \"(?<currentValue>\\d+\\.\\d+\\.\\d+)\""
            ],
            "depNameTemplate": "androidx.constraintlayout:constraintlayout"
        },
        {
            "fileMatch": [
                "^.*Versions\\.kt$"
            ],
            "matchStrings": [
                "val work: String = \"(?<currentValue>\\d+\\.\\d+\\.\\d+)\""
            ],
            "depNameTemplate": "androidx.work:work-runtime-ktx"
        },
        {
            "fileMatch": [
                "^.*Versions\\.kt$"
            ],
            "matchStrings": [
                "val hilt: String = \"(?<currentValue>\\d+\\.\\d+\\.\\d+)\""
            ],
            "depNameTemplate": "com.google.dagger:hilt-android"
        },
        {
            "fileMatch": [
                "^.*Versions\\.kt$"
            ],
            "matchStrings": [
                "val hiltAandroidx: String = \"(?<currentValue>\\d+\\.\\d+\\.\\d+)\""
            ],
            "depNameTemplate": "androidx.hilt:hilt-navigation-compose"
        },
        {
            "fileMatch": [
                "^.*Versions\\.kt$"
            ],
            "matchStrings": [
                "val composeBom: String = \"(?<currentValue>\\d+\\.\\d+\\.\\d+)\""
            ],
            "depNameTemplate": "androidx.compose:compose-bom"
        },
        {
            "fileMatch": [
                "^.*Versions\\.kt$"
            ],
            "matchStrings": [
                "val robolectric: String = \"(?<currentValue>\\d+\\.\\d+\\.\\d+)\""
            ],
            "depNameTemplate": "org.robolectric:robolectric"
        },
        {
            "fileMatch": [
                "^.*Versions\\.kt$"
            ],
            "matchStrings": [
                "val espresso: String = \"(?<currentValue>\\d+\\.\\d+\\.\\d+)\""
            ],
            "depNameTemplate": "androidx.test.espresso:espresso-core"
        },
        {
            "fileMatch": [
                "^.*Versions\\.kt$"
            ],
            "matchStrings": [
                "val kgp: String = \"(?<currentValue>\\d+\\.\\d+\\.\\d+)\""
            ],
            "depNameTemplate": "org.jetbrains.kotlin:kotlin-gradle-plugin"
        },
        {
            "fileMatch": [
                "^.*Versions\\.kt$"
            ],
            "matchStrings": [
                "val ksp: String = \"(?<currentValue>\\d+\\.\\d+\\.\\d+-\\d+\\.\\d+\\.\\d+)\""
            ],
            "depNameTemplate": "com.google.devtools.ksp:symbol-processing-gradle-plugin"
        },
        {
            "fileMatch": [
                "^.*Versions\\.kt$"
            ],
            "matchStrings": [
                "val coroutines: String = \"(?<currentValue>\\d+\\.\\d+\\.\\d+)\""
            ],
            "depNameTemplate": "org.jetbrains.kotlinx:kotlinx-coroutines-core"
        },
        {
            "fileMatch": [
                "^.*Versions\\.kt$"
            ],
            "matchStrings": [
                "val kotlinTest: String = \"(?<currentValue>\\d+\\.\\d+\\.\\d+)\""
            ],
            "depNameTemplate": "org.jetbrains.kotlin:kotlin-test"
        },
        {
            "fileMatch": [
                "^.*Versions\\.kt$"
            ],
            "matchStrings": [
                "val junit4: String = \"(?<currentValue>\\d+\\.\\d+\\.\\d+)\""
            ],
            "depNameTemplate": "junit:junit"
        },
        {
            "fileMatch": [
                "^.*Versions\\.kt$"
            ],
            "matchStrings": [
                "val junit5: String = \"(?<currentValue>\\d+\\.\\d+\\.\\d+)\""
            ],
            "depNameTemplate": "org.junit.jupiter:junit-jupiter"
        },
        {
            "fileMatch": [
                "^.*Versions\\.kt$"
            ],
            "matchStrings": [
                "val truth: String = \"(?<currentValue>\\d+\\.\\d+\\.\\d+)\""
            ],
            "depNameTemplate": "com.google.truth:truth"
        },
        {
            "fileMatch": [
                "^.*Versions\\.kt$"
            ],
            "matchStrings": [
                "val mockk: String = \"(?<currentValue>\\d+\\.\\d+\\.\\d+)\""
            ],
            "depNameTemplate": "io.mockk:mockk"
        },
        {
            "fileMatch": [
                "^.*Versions\\.kt$"
            ],
            "matchStrings": [
                "val coreTesting: String = \"(?<currentValue>\\d+\\.\\d+\\.\\d+)\""
            ],
            "depNameTemplate": "androidx.arch.core:core-testing"
        },
        {
            "fileMatch": [
                "^.*Versions\\.kt$"
            ],
            "matchStrings": [
                "val junitExt: String = \"(?<currentValue>\\d+\\.\\d+\\.\\d+)\""
            ],
            "depNameTemplate": "androidx.test.ext:junit"
        },
        {
            "fileMatch": [
                "^.*Versions\\.kt$"
            ],
            "matchStrings": [
                "val develocity: String = \"(?<currentValue>\\d+\\.\\d+\\.\\d+)\""
            ],
            "depNameTemplate": "com.gradle:develocity-gradle-plugin"
        },
        {
            "fileMatch": [
                "^.*Versions\\.kt$"
            ],
            "matchStrings": [
                "AdditionalPlugin\\(\"com\\.autonomousapps\\.dependency-analysis\",\\s*\"(?<currentValue>\\d+\\.\\d+\\.\\d+)\""
            ],
            "depNameTemplate": "com.autonomousapps:dependency-analysis-gradle-plugin"
        }
    ]
}
